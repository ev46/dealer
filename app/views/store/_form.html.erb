
<div class='center'>
<%= simple_form_for :store, method: :put, :url => update_store_path, :html => { :multipart => true, "data-abide" => '' } do |f| %>
  <%= f.error_notification %>


  <div class="large-6 columns">
  <div class="form-inputs">
    <%= f.input :name, :label => 'Business name' %>
    <%= f.input :about, :as => :text, :label => 'About your store' %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :fax %>
    <%= f.input :email, :type => "email" %>
    <%= f.input :url, :type => "url" %>
    <%= f.input :warranty, :input_html => { :value => '1 Year drivetrain parts and labor'} %>
    <%= f.input :time_zone, :collection => ActiveSupport::TimeZone.us_zones.map(&:name), :label => 'Your time zone.' %>
    <%= f.input :sun %>
    <%= f.input :mon %>
    <%= f.input :tus %>
    <%= f.input :wed %>
    <%= f.input :thr %>
    <%= f.input :fri %>
    <%= f.input :sat %>

    
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "button" %>
  </div>
  </div>
<% end %>
</div>